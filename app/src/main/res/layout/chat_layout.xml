<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8e0e8"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background= "#0397e7">
        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="centerCrop"
            android:src="@drawable/arrowleft"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/usernameId"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="123"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:typeface="sans"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:background="@drawable/sendmessage_linearlayout_style"
        android:padding="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/input_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:typeface="sans"
                android:layout_weight="8"
                android:background="@drawable/editext_style"
                android:layout_gravity="center_vertical"
                android:textSize="17dp"
                android:minLines="1"
                android:maxLines="10"
                android:padding="4dp"/>
            <Button
                android:id="@+id/send_Button"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:text="发送"
                android:typeface="sans"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:background="@color/stateColor"
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">
            <ImageView
                android:id="@+id/voiceBtn"
                android:layout_width="21dp"
                android:layout_height="25dp"
                android:src="@drawable/voicemsg"
                android:layout_marginLeft="3dp" />
            <ImageView
                android:id="@+id/albmImg"
                android:layout_width="22dp"
                android:layout_height="25dp"
                android:src="@drawable/img"
                android:layout_marginLeft="40dp"/>
            <ImageView
                android:layout_width="22dp"
                android:layout_height="25dp"
                android:src="@drawable/file"
                android:layout_marginLeft="40dp"/>
            <ImageView
                android:id="@+id/cameraImg"
                android:layout_width="22dp"
                android:layout_height="25dp"
                android:src="@drawable/camera"
                android:layout_marginLeft="40dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
