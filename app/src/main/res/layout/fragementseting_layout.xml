<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e9e6e6">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#0397e7"
        >
        <ImageView
            android:id="@+id/head_photoId"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/head2"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/head_userNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_alignTop="@id/head_photoId"
            android:layout_toRightOf="@id/head_photoId"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:typeface="sans"/>
        <TextView
            android:id="@+id/head_userID"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="#dcd9d9"
            android:typeface="sans"
            android:layout_below="@id/head_userNickName"
            android:layout_alignStart="@id/head_userNickName"/>
    </RelativeLayout>

    <!--用户名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/personalfrag_linearlayout_style"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:padding="7dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/id"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="用户ID"
            android:layout_marginLeft="10dp"
            android:textSize="17sp"
            android:typeface="sans"
            android:textColor="#585757"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/content_userId"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#979595"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:typeface="sans"
            android:textStyle="italic"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/pwd"
            android:layout_marginRight="2dp"
            android:layout_gravity="center_vertical"
            android:alpha="0.5"/>
    </LinearLayout>

    <!--昵称-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/personalfrag_linearlayout_style"
        android:orientation="horizontal"
        android:padding="7dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/tag"
            android:layout_marginLeft="10dp" />
        <TextView
            android:id="@+id/nickName"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="个性昵称"
            android:layout_marginLeft="10dp"
            android:textColor="#585757"
            android:typeface="sans"
            android:textSize="17sp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/nickNameText"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#979595"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:typeface="sans"
            android:gravity="right"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/nickNameImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow"
            android:layout_marginRight="2dp"
            android:layout_gravity="center_vertical"
            android:alpha="0.5"/>
    </LinearLayout>

    <!--聊天背景-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/personalfrag_linearlayout_style"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:padding="7dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="聊天背景"
            android:layout_marginLeft="10dp"
            android:textColor="#585757"
            android:textSize="17sp"
            android:typeface="sans"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/content_backPhoto"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#979595"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:typeface="sans"
            android:gravity="right"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/backPhotoImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow"
            android:layout_marginRight="2dp"
            android:layout_gravity="center_vertical"
            android:alpha="0.5"/>
    </LinearLayout>
    <!--个性宣言-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/personalfrag_linearlayout_style"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:padding="7dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/mark"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="个性宣言"
            android:layout_marginLeft="10dp"
            android:textColor="#585757"
            android:textSize="17sp"
            android:typeface="sans"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/content_personalTalk"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#979595"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:typeface="sans"
            android:gravity="right"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/personalTalkImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow"
            android:layout_marginRight="2dp"
            android:layout_gravity="center_vertical"
            android:alpha="0.5"/>
    </LinearLayout>

    <!--愛好-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/personalfrag_linearlayout_style"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:padding="7dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/movie"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="我的愛好"
            android:layout_marginLeft="10dp"
            android:textColor="#585757"
            android:textSize="17sp"
            android:typeface="sans"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/content_loveThing"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#979595"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:typeface="sans"
            android:gravity="right"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/loveThingImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow"
            android:layout_marginRight="2dp"
            android:layout_gravity="center_vertical"
            android:alpha="0.5"/>
    </LinearLayout>

    <Button
        android:id="@+id/loginOutId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0397e7"
        android:text="退出账号"
        android:textColor="#FFFFFF"
        android:padding="5dp"
        android:gravity="center"
        android:typeface="sans"
        android:textSize="18sp"
        android:layout_marginTop="35dp"
        android:alpha="0.8"/>

</LinearLayout>
